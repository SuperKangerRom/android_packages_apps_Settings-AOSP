<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:title="@string/status_bar_title">

    <!-- Status Bar Battery Options -->
    <PreferenceScreen
        android:key="status_bar_battery_status_settings"
        android:title="@string/status_bar_battery_status_settings_title"
        android:summary="@string/status_bar_battery_status_settings_summary"
        android:fragment="com.android.settings.vrtoxin.StatusBarBatteryStatusSettings" />

    <!-- Carrier Label -->
    <PreferenceScreen
        android:key="status_bar_carrier_label_settings"
        android:title="@string/status_bar_carrier_label_settings_title"
        android:summary="@string/status_bar_carrier_label_settings_summary"
        android:fragment="com.android.settings.vrtoxin.CarrierLabel" />

    <!-- Clock -->
    <PreferenceScreen
        android:key="status_bar_clock"
        android:title="@string/status_bar_clock_settings_title"
        android:summary="@string/status_bar_clock_settings_summary"
        android:fragment="com.android.settings.vrtoxin.StatusBarClockSettings" />

    <!-- Network Traffic -->
    <PreferenceScreen
        android:key="network_traffic_state"
        android:fragment="com.android.settings.vrtoxin.NetworkTraffic"
        android:summary="@string/network_traffic_summary"
        android:title="@string/network_traffic_title" />

    <!-- Random Options -->
    <PreferenceScreen
        android:key="status_bar_random"
        android:title="@string/status_bar_random_title"
        android:summary="@string/status_bar_random_summary"
        android:fragment="com.android.settings.vrtoxin.StatusBarRandom" />
    
    <!-- Status bar VRToxin logo --> 
    <PreferenceScreen
        android:key="status_bar_vrtoxin_logo"
        android:title="@string/status_bar_vrtoxin_logo_title"
        android:summary="@string/status_bar_vrtoxin_logo_summary"
        android:fragment="com.android.settings.vrtoxin.StatusLogo" />

    <!-- Weather -->
    <PreferenceScreen
        android:key="status_bar_weather_temperature"
        android:title="@string/status_bar_weather_temperature_title"
        android:summary="@string/status_bar_weather_temperature_summary"
        android:fragment="com.android.settings.vrtoxin.StatusBarWeather" />

</PreferenceScreen>
